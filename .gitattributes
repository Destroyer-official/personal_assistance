# Auto detect text files and perform LF normalization
* text=auto

# Treat large model and binary files as binary. If you use Git LFS, these
# patterns are commonly set to use the LFS filter (install git-lfs and run
# `git lfs install` to enable).
*.gguf binary
*.safetensors binary
*.onnx binary
voices.bin binary

# Optional: enable Git LFS for these patterns (requires git-lfs setup)
*.gguf filter=lfs diff=lfs merge=lfs -text
*.safetensors filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
voices.bin filter=lfs diff=lfs merge=lfs -text

# Do not include local config files in generated archives
config.py export-ignore
